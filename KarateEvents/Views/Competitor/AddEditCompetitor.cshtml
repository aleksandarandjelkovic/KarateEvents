@model KarateEvents.ViewModels.CompetitorViewModel.AddEditCompetitorViewModel

@{
    ViewBag.Title = "AddEditCompetitor";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Dodavanje takmičara</h2>

@using (Html.BeginForm("SaveCompetitor", "Competitor"))
{
    @Html.ValidationSummary(true, "Molimo Vas, ispravite greške")
    <div class="form-group">
        @Html.LabelFor(m => m.Competitor.Name)
        @Html.TextBoxFor(m => m.Competitor.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Competitor.Name)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Competitor.DateOfBirth)
        @Html.TextBoxFor(m => m.Competitor.DateOfBirth, "{0:d MMM yyyy}", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Competitor.DateOfBirth)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Competitor.CategoryId)
        @Html.DropDownListFor(m => m.Competitor.CategoryId, new SelectList(Model.Categories, "Id", "CategoryName"), "Kategorija", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Competitor.CategoryId)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Competitor.GenderId)
        @Html.DropDownListFor(m => m.Competitor.GenderId, new SelectList(Model.Genders, "Id", "GenderName"), "Pol", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Competitor.GenderId)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Competitor.ClubId)
        @Html.DropDownListFor(m => m.Competitor.ClubId, new SelectList(Model.Clubs, "Id", "Name"), "Klub", new { @class = "form-control" })
    </div>
    if (Model.Competitor != null)
    {
        @Html.HiddenFor(c => c.Competitor.Id)
    }
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-success">Sačuvaj</button>
    @Html.ActionLink("Nazad", "Index", "Competitor", new { @class = "btn btn-info" })
}


