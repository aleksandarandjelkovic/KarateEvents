@model KarateEvents.ViewModels.CompetitorViewModel.AddEditCompetitorViewModel

@{
    ViewBag.Title = "AddEditCompetitor";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Dodavanje takmičara</h2>

@using (Html.BeginForm("SaveCompetitor", "Competitor", FormMethod.Post))
{
    @Html.ValidationSummary(true, "Molimo Vas, ispravite greške")
    <div class="form-group">
        @Html.LabelFor(m => m.Name)
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Name)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.DateOfBirth)
        @Html.TextBoxFor(m => m.DateOfBirth, "{0:d MMM yyyy}", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.DateOfBirth)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.CategoryId)
        @Html.DropDownListFor(m => m.CategoryId, new SelectList(Model.Categories, "Id", "CategoryName"), "Kategorija", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.CategoryId)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.GenderId)
        @Html.DropDownListFor(m => m.GenderId, new SelectList(Model.Genders, "Id", "GenderName"), "Pol", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.GenderId)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ClubId)
        @Html.DropDownListFor(m => m.ClubId, new SelectList(Model.Clubs, "Id", "Name"), "Klub", new { @class = "form-control" })
    </div>

    @Html.HiddenFor(c => c.Id)

    @Html.AntiForgeryToken()
    <input name="save" type="submit" value="Sačuvaj" class="btn btn-success" />
    @Html.ActionLink("Nazad", "Index", "Competitor", new { @class = "btn btn-info" })
}


