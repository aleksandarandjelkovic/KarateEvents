@model KarateEvents.ViewModels.CoachViewModel.AddEditCoachViewModel

@{
    ViewBag.Title = "AddEditCoach";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Dodavanje trenera</h2>

@using (Html.BeginForm("SaveCoach", "Coach"))
{
    @Html.ValidationSummary(true, "Molimo Vas, ispravite greške")
    <div class="form-group">
        @Html.LabelFor(m => m.Coach.Name)
        @Html.TextBoxFor(m => m.Coach.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Coach.Name)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Coach.DateOfBirth)
        @Html.TextBoxFor(m => m.Coach.DateOfBirth, "{0:d MMM yyyy}", new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Coach.CoachTypeId)
        @Html.DropDownListFor(m => m.Coach.CoachTypeId, new SelectList(Model.Types, "Id", "CoachTypeName"), "Tip", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Coach.CoachTypeId)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Coach.GenderId)
        @Html.DropDownListFor(m => m.Coach.GenderId, new SelectList(Model.Genders, "Id", "GenderName"), "Pol", new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Coach.ClubId)
        @Html.DropDownListFor(m => m.Coach.ClubId, new SelectList(Model.Clubs, "Id", "Name"), "Klub", new { @class = "form-control" })
    </div>
    if (Model.Coach != null)
    {
        @Html.HiddenFor(c => c.Coach.Id)
    }
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-success">Sačuvaj</button>
    @Html.ActionLink("Nazad", "Index", "Coach", new { @class = "btn btn-info" })
}
